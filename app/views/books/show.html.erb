<div class="container">
<footer>
 <div class="row">
  <div class="col-xs-3">
      <h2>User info</h2>
    <% if flash[:notice] %>
      <p class="notice"><%= notice %></p>
    <% end %>
      <table class="table">
	    	<tr><%= attachment_image_tag @user, :profile_image, fallback: "no_image.jpg", size: "100x100" %></tr>

		      <tr>
			      <th>name</th>
		      	<th><%= @user.name %></th>
		      </tr>

	      	<tr>
			      <th>introduction</th>
			      <th><%= @user.introduction %></th>
		      </tr>
      </table>
      <div class="bottan">
        <%= link_to '',edit_user_path(@user.id), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench" %>
      </div>
      
    <div class="new book">
		<h2>New book</h2>
    <%= form_for(@book_new)  do |f| %>
      <h4>Title</h4>
      <%= f.text_field :title %>
      <h4>Opinion</h4>
      <%= f.text_area :body %>
      <%= f.submit 'Create Book' %>
    <% end %>
    </div>
  </div>
    
  <div class="col-xs-9">
    <h2>Book detail</h2>
    <table class="table table-striped">
      <thead>
        <tr>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
         <th>
           <td>
           <%= link_to(user_path(@user)) do %>
             <%= attachment_image_tag(@user, :profile_image, fallback: "no_image.jpg", size:'50x50') %>
             <div class="user_name"><%= @user.name %></div>
           <% end %>
           </td>
           <td><%= link_to @book.title, book_path(@book.id) %></td>
           <td><%= @book.body %></td>
         </th>
          <% if @book.user_id == current_user.id %>
           <td class="edit_book"><%= link_to "Edit",edit_book_path(@book.id), class: "btn-sm btn-success" %></td>
           <td class="destroy_book"><%= link_to "Destroy", book_path(@book), method: :delete, data: {comfirm: "本当に消しますか?"} %></td>
          <% end %>
      </tbody>
    </table>
  </div>
 </div>
 </footer>
</div>